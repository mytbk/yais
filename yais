#!/bin/bash
# YAIS: yet another installation script
#
VERSION="0.1 Beta"
for FILE in yais.d/*.sh
do
	. $FILE
done
EDITOR=vi
funcs=(bash editor partition mount_disk mirrorselect testnet install_pkg install_grub fstab setpass exit)
menuname=(
	"Open a bash shell" \
	"Select an editor(default vi)" \
	"Partitioning" \
	"Mount your partitions" \
	"Select a mirror" \
	"Test the internet" \
	"Install packages" \
	"Install grub" \
	"Generate fstab" \
	"Set root password" \
	"Exit YAIS" \
	)
TODO=1

menu(){
	echo "YAIS $VERSION"
	echo
	for i in {0..10} 
	do
		if [ $i == $TODO ]; then
			echo -e -n '\033[31m'
		fi
		echo -e "$i. ${menuname[$i]}\033[0m"
	done
	echo -n "Your option(default $TODO):"
}

while true
do
	clear
	menu
	read FUNCID
	FUNCID=${FUNCID:-$TODO}
	${funcs[$FUNCID]}
	if [ $FUNCID -gt 0 ]; then
		let TODO=FUNCID+1
	fi
done

